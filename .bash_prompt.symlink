# .bash_prompt

# Don't show more than 2 levels in cwd path
PROMPT_DIRTRIM=2

# credits to: https://coderwall.com/p/fasnya/add-git-branch-name-to-bash-prompt
parse_git_branch() {
	git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

# check if there are local uncommitted changes
local_changes() {
    [[ -f .git ]] && [[ -n "$(git status -s)" ]] && echo "!" || echo ""
}

export PS1="\u \[\033[32m\]\w\[\033[97m\]\$(parse_git_branch)$(local_changes)\[\033[00m\]$ "
